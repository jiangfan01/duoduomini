page {
    background: #f8f8f8;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
}

.header {
    font-size: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    margin-bottom: 20px;
}

.content {
    width: 100%;
    background: white;
    padding: 20px;
}

.item {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid rgba(204, 204, 204, 0.3);
}

.amount {
    color: red;
    font-weight: bold;
}

.picker {
    padding: 10px;
    border: 1px solid rgba(204, 204, 204, 0.5);
    border-radius: 5px;
}

button {
    width: 100%;
    margin-top: 20px;
    background-color: #67c1b5;
    color: white;
    font-size: 16px;
    padding: 10px 0;
    border-radius: 5px;
}

.product-name {
    max-width: 220px;
}

.time-box {
    display: flex;
    align-items: center;
    font-size: 20px;
    margin-bottom: 12px;
    justify-content: center;
}
.time-item {
    align-items: center;
    width: 22px;
    font-size: 20px;
    margin-right: 3px;
    text-align: center;
    color: #333333;
    margin-top: 4px;
}
.time-item:nth-child(1){
    margin-left: 12px;
}
.last-time{
    margin-bottom: 5px;
}