<view class="container">
    <view class="time-box">
        <text class="last-time">剩余时间</text>
        <van-count-down time="{{ time }}" bind:change="onChange"  use-slot>
            <text class="time-item">{{ timeData.minutes }}:</text>
            <text class="time-item">{{ timeData.seconds }}</text>
        </van-count-down>
    </view>

    <view class="header">
        <text>支付信息</text>
    </view>
    <view class="content">

        <view class="item">
            <text>订单编号：</text>
            <text class="order-id">201809090000000
            </text>
        </view>
        <view class="item">
            <text>支付金额：</text>
            <text class="amount">￥100.00</text>
        </view>
        <view class="item">
            <text>商品名：</text>
            <text class="product-name">极品核桃极品核桃极品核桃极品核桃</text>
        </view>
        <view class="item">
            <text>数量：</text>
            <text class="">1</text>
        </view>

        <view class="item" wx:if="{{hasSite}}">
            <text>下单站点：</text>
            <text class="">南泰中央华府</text>
        </view>
        <view class="item">
            <text>下单时间：</text>
            <text class=""> 2018-09-09 12:00:00</text>
        </view>
        <button bindtap="confirmPayment">确认支付</button>
    </view>
</view>
