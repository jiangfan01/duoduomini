.slide-image {
    height: 300rpx;
    width: 450rpx;
    border-radius: 10rpx;
    margin: 0rpx 50rpx;
    z-index: 1;
    box-shadow: 10rpx 5px 40rpx rgba(0, 0, 0, 0.5);
}

.active {
    transform: scale(1.3);
    transition: all .5s ease-in 0s;
    z-index: 20;
}

.common {
    transform: scale(1);
    transition: all .5s ease-in 0s;
    z-index: 0;
}

.content {
    margin: 10px 0;
}

.product-info {
    background: white;
    padding:  12px;
}
.info-box{
    display: flex;
    justify-content: space-between;
}
.product-name{
    color: #333;
    font-size: 24px;
    max-width: 350px;
}
.price {
    display: flex;
    gap: 10px;
}

.now-price {
    color: #e54d42;
    font-size: 24px;
}
.pre-price{
    text-decoration: line-through;
    color: #999;
}
.number{
    color: #999;
}
.product-description{
    background: white;
    margin-top: 24px;
    padding: 12px;
}
.description{
    margin-bottom: 10px;
    font-size: 18px;
    color: #333;
    font-weight: 600;
}
.description-content{
    display: flex;
    flex-direction: column;
    gap: 10px;
    padding: 10px 0;
    color: #333;
}
.bottom-tab-bar{
    margin-left: 24px;
}