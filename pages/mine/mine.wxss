.user-page {
    background-color: #f5f5f5;
    padding: 20rpx;
}

/* 用户信息部分 */
.user-info {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 40rpx 0;
    background-color: #fff;
    border-radius: 20rpx;
}

