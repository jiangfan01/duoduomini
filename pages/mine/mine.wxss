.avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    display: block;
}
.phone {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}

/* 订单状态部分 */
.orders-section {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
    border-radius: 20rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.order-status {
    margin-top: 8px;
    display: flex;
    justify-content: space-between;
}

.status-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 150rpx;
}

.status-item image {
    width: 80rpx;
    height: 80rpx;
}

.status-item text {
    margin-top: 10rpx;
    font-size: 28rpx;
    color: #666;
}

/* 我的设置部分 */
.settings-section {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
    border-radius: 20rpx;
}

.settings-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.settings-item:nth-child(1) {
    margin-top: 20px;
}

.settings-item:last-child {
    border-bottom: none;
}

.settings-item image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}

.settings-item text {
    font-size: 32rpx;
    color: #333;
}

.default-avatar {
    background: #f8f8f8;
    width: 68px;
    height: 68px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    margin: 0;
}
button {
    margin: 0;
    padding: 0;
    background-color: inherit;
    position: static;
}

button:after {
    content: none;
}

button::after {
    border: none;
}